<form action="<%= notes_url %>", method="POST">

  <input type="hidden"
         name="authenticity_token"
         value="<%= form_authenticity_token %>">

  <input type="hidden"
         name="note[track_id]"
         value=<%= @track.id %>>

  <textarea name="note[body]"></textarea>
  <br>

  <input type="submit"
         value="Submit Note">

</form>
