<h1>Create a new Band Page</h1>

<form action="<%= bands_url %>" method="POST">

  <input type="hidden"
         name="authenticity_token"
         value="<%= form_authenticity_token %>">

  <label for="band_name">Name:</label>
  <input name="band[name]"
         value="<%= @band.name %>"
         id="band_name">
  <br>

  <input type="submit"
         value="CREATE BAND">

</form>
